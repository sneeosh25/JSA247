<div class="message">
	<h2 id="welcome">Welcome to Snapchat For Dogs!<br/>
		<small id="subheader">Click the button below to get started.</small>
	</h2>
</div>

<div id="start">
	<button type="button" class="btn btn-primary" id="start_button">Get Started</button>
</div>

<div id="chat_info">
	<form id="centered_form" name="joinChat" action="javascript:joinChat();">
	  	<div class="form-group">
	    	<input name="full_name" class="form-control" id="first_name" placeholder="Enter your full name">
	  	</div>
	  	<select name="select_industry" class="form-control" id="select_indsutry">
			<option>--- Select your industry ---</option>
			<option>Technology</option>
			<option>Business</option>
			<option>Health</option>
			<option>Art</option>
			<option>Whatever</option>
		</select>
	  	<select name="select_city" class="form-control" id="select_city">
			<option>--- Select your city ---</option>
			<option>New York</option>
			<option>Los Angeles</option>
			<option>San Francisco</option>
			<option>London</option>
			<option>Tokyo</option>
		</select>
	  	<button type="submit" class="btn btn-primary" id="join_chat_btn">Join Video Chat</button>
	</form>
	<h4 id="waiting">Waiting for your conversation partner...</h4>
</div>

<div id="content">
	
	<div id="horizontalBar">
		<div id="partnerName"></div>
		<div id="switch">See your context</div>
	</div>

	<section>
		<div id="you">
			<div id="me"></div>
		</div>

		<div id="show">Show me more info about Kenny</div>

		<div id="right">
			<div id="hide">close</div>
			<br/>
			<div id="tabs">
				<span class="selected tab" id="news_tab">News</span>
				<span class="tab_separator">|</span>
				<span class="tab" id="linkedin_tab">Info</span>
				<span class="tab_separator">|</span>
				<span class="tab" id="twitter_tab">Twitter</span>
			</div>
			<div id="news_div">
				<h4 id="news_header" class="toggle_header">News</h4>
				<div id="news_content">
				</div>
			</div>

			<div id="linkedin_div" style="display: none;">
				<h4 id="linkedin_header" class="toggle_header">LinkedIn</h4>
				<div id="linkedin_content">
				</div>
			</div>

			<div id="twitter_div" style="display: none;">
				<h4 id="twitter_header" class="toggle_header">Twitter Trends</h4>
				<div id="twitter_content">
				</div>
			</div>
		</div>
	</section>

</div>
