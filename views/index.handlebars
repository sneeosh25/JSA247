<div id="outer_wrap">

	<div id="wrap" >
		<div class="message">
			<h2 id="welcome">Remote No More.<br/>
				<small id="subheader">Click the button below to get started.</small>
			</h2>
		</div>

		<div id="start">
			<button type="button" class="btn btn-primary" id="start_button">Get Started</button>
		</div>

		<div id="chat_info">
			<form id="centered_form" name="joinChat" action="javascript:joinChat();">
			  	<div class="form-group">
			    	<input name="full_name" class="form-control" id="first_name" placeholder="Enter your full name">
			  	</div>
			  	<select name="select_industry" class="form-control" id="select_indsutry">
					<option>--- Select your industry ---</option>
					<option>Technology</option>
					<option>Business</option>
					<option>Health</option>
					<option>Art</option>
					<option>Sports</option>
					<option>Science</option>
				</select>
			  	<select name="select_city" class="form-control" id="select_city">
					<option>--- Select your city ---</option>
					<option>New York</option>
					<option>Los Angeles</option>
					<option>San Francisco</option>
					<option>London</option>
					<option>Tokyo</option>
				</select>
			  	<button type="submit" class="btn btn-primary" id="join_chat_btn">Join Video Chat</button>
			</form>
			<h4 id="waiting">Waiting for your conversation partner...</h4>
		</div>
	</div>

</div>


<div id="content">
	
	<div id="horizontalBar">
		<div id="partnerName"></div>

	</div>

	<section>
		<div id="left">
			<div id="you">
